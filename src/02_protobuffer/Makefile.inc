SHELL=/bin/sh

PROTOBUFFER: \
		${PBPROTOBUFFER_PHONY} \
		${BINPROTOBUFFER_PHONY} \
		${GOPROTOBUFFER_PHONY}
	@echo MAKE PROTOBUFFER 

PROTOBUFFER_DEV: \
		${PBPROTOBUFFER_PHONY_DEV} \
		${BINPROTOBUFFER_PHONY_DEV} \
		${GOPROTOBUFFER_PHONY_DEV}
	@echo MAKE PROTOBUFFER 

PROTOBUFFER_CLEAN: \
		${PBPROTOBUFFER_PHONY_CLEAN} \
		${BINPROTOBUFFER_PHONY_CLEAN} \
		${GOPROTOBUFFER_PHONY_CLEAN}
	@echo MAKE PROTOBUFFER_CLEAN 

### protobuffer #####################################################################################
BINPROTOBUFFER: ${BINPROTOBUFFER_BIN}
	@echo MAKE BINPROTOBUFFER 

BINPROTOBUFFER_CLEAN: ${BINPROTOBUFFER_BIN_CLEAN}
	@echo MAKE BINPROTOBUFFER_CLEAN 

${BINPROTOBUFFER_BIN}:
	$(CD) ${BINPROTOBUFFER} && $(MAKE) -f Makefile.${BINPROTOBUFFER_NAME} -j8 $@

BINPROTOBUFFER_DEV: 
	$(CD) ${BINPROTOBUFFER} && $(MAKE) -f Makefile.${BINPROTOBUFFER_NAME} -j8 ${BINPROTOBUFFER_BIN}
	@echo MAKE $@ 

${BINPROTOBUFFER_BIN_CLEAN}:
	$(CD) ${BINPROTOBUFFER} && $(MAKE) -f Makefile.${BINPROTOBUFFER_NAME} $@

