GRPCFTP: \
		${PBGRPCFTP_PHONY} \
		${BINGRPCFTPCLIENT_PHONY} \
		${BINGRPCFTPSERVER_PHONY} \
		${GOGRPCFTPCLIENT_PHONY} \
		${GOGRPCFTPSERVER_PHONY}
	@echo MAKE GRPCFTP 

GRPCFTP_DEV: \
		${PBGRPCFTP_PHONY_DEV} \
		${BINGRPCFTPCLIENT_PHONY_DEV} \
		${BINGRPCFTPSERVER_PHONY_DEV} \
		${GOGRPCFTPCLIENT_PHONY_DEV} \
