${BINGRPCFTPCLIENT_BIN}:
	$(CD) ${BINGRPCFTPCLIENT} && $(MAKE) -f Makefile.${BINGRPCFTPCLIENT_NAME} -j8 $@

BINGRPCFTPCLIENT_DEV: 
	$(CD) ${BINGRPCFTPCLIENT} && $(MAKE) -f Makefile.${BINGRPCFTPCLIENT_NAME} -j8 ${BINGRPCFTPCLIENT_BIN}
	@echo MAKE $@ 

